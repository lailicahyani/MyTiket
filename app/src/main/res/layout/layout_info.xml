<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_illustrator_enjoy"
        android:contentDescription="@string/str_enjoy_it" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s22"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:layout_marginTop="@dimen/m50"
        android:text="@string/str_enjoy_it" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="@dimen/m50"
        android:layout_marginEnd="@dimen/m50"
        android:gravity="center"
        android:lineHeight="28dp"
        android:text="@string/info_enjoy" />

</LinearLayout>